<% layout("/layout/boilerplate") %>
<div class="row">
    <h1 class="col-6 offset-3">LogIn</h1>
    <div class="col-6 offset-3" >
        <form method="POST" action="/login" class="needs-validation" novalidate>
            <div class="mb-2">
                <label for="username" class="form-label">Username</label>
                <input name="username" type="text" class="form-control" id="username" required>
                <div class="valid-feedback"> Looks good!</div>
                <div class="invalid-feedback">enter valid Username</div>
            </div>
            <div class="mb-2">
                <label for="password" class="form-label">Password</label>
                <input name="password" type="text" class="form-control" id="password" required>
                <div class="valid-feedback"> Looks good!</div>
                <div class="invalid-feedback">enter valid password</div>
            </div>
            <button class="btn btn-success">LogIn</button>
        </form>
    </div>
 </div>